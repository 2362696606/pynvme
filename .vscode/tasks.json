    "version": "2.0.0",
    "tasks": [
        {
            "label": "pynvme_setup",
            "type": "shell",
            "command": "make setup",
            "presentation": {
                "reveal": "always"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "refresh_trigger",
            "type": "shell",
            "command": "watch -n 1 touch refresh",
            "presentation": {
                "reveal": "silent"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
        
    ]
}
